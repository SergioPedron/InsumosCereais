<html>
    <%= nav_bar brand: "Insumos para Cereais", brand_link: root_url %>
    <div class="container">
        <body>
            <table class="table table-bordered table hover">
                <thead>
                    <tr>
                        <td>Código</td>
                        <td>Descrição</td>
                        <td>Preço</td>
                        <td>Quantidade</td>
                    </tr>
                </thead>
                <body>
                    <%@ConsInsumos.each do |insumo| %>
                        <tr>
                            <td><%=insumo.codigo%></td>
                            <td><%=insumo.descricao%></td>
                            <td><%=insumo.preco%></td>
                            <td><%=insumo.quantidade%></td>
