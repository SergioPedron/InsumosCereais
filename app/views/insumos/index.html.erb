                    <tr>
                        <td>Código</td>
                        <td>Descrição</td>
                        <td>Preço</td>
                        <td>Quantidade</td>
                    </tr>
                </thead>
                <body>
                    <%@ConsInsumos_com_desconto.each do |insumo| %>
                        <tr>
                            <td><%=insumo.codigo%></td>
                            <td><%=insumo.descricao%></td>
                            <td><%=insumo.preco%></td>
                            <td><%=insumo.quantidade%></td>
                        </tr>
                    <%end%>
                </body>
            </table>        
